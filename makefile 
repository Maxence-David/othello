EXEC=othello
EXECTEST=testOthello
SRCTESTDIR=testsrc
SRCDIR=src
LIBDIR=lib
TESTDIR=tests
BINDIR=bin
INCLUDEDIR=include
DOCDIR=doc
CC=gcc
CREATE=mkdir

CFLAGS=-Wall -pedantic -g -std=gnu99 -I$(INCLUDEDIR)
LDFLAGS=-L$(LIBDIR) -lothello




doc :$(DOCDIR)/rapport/rapport.pdf:
	cd $(DOCDIR)/rapport/; pdflatex  rapport.tex; 


clean:
	rm -rf $(BINDIR)/*
	rm -rf $(LIBDIR)/*.a
	rm -rf $(SRCDIR)/*.o
	rm -rf $(SRCTESTDIR)/*.o
	rm -rf $(TESTDIR)/*
	rm -rf $(DOCDIR)/html
	rm -rf $(DOCDIR)/rapport/*.pdf
	rm -rf $(DOCDIR)/latex